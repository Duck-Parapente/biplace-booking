{
  "name": "backend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dotenv": "dotenv -e ../../infra/.env",
    "dev": "pnpm dotenv -- ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/main.ts | pino-pretty",
    "attribute:dev": "pnpm dotenv -- ts-node-dev -r tsconfig-paths/register --transpile-only src/console.ts run:attribute-packs | pino-pretty",
    "start": "node dist/apps/backend/src/main.js",
    "attribute": "node dist/apps/backend/src/console.js run:attribute-packs",
    "build": "tsc -p tsconfig.json && tsc-alias",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint:deps": "depcruise src --config ./dependency-cruiser.js --validate",
    "prisma:generate": "pnpm exec prisma generate",
    "prisma:migrate": "pnpm dotenv -- pnpm exec prisma migrate dev",
    "prisma:deploy": "pnpm exec prisma migrate deploy",
    "start:prod": "pnpm prisma:deploy && pnpm start"
  },
  "dependencies": {
    "@nestjs/common": "10.0.0",
    "@nestjs/config": "3.0.0",
    "@nestjs/core": "10.0.0",
    "@nestjs/cqrs": "11.0.3",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "10.0.0",
    "@prisma/client": "6.18.0",
    "auth0": "5.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "dotenv-cli": "11.0.0",
    "express": "4.18.2",
    "jwks-rsa": "3.2.0",
    "nestjs-console": "10.0.0",
    "nestjs-pino": "4.4.1",
    "newrelic": "13.6.2",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "pino": "9.0.0",
    "pino-pretty": "13.1.2",
    "prisma": "6.18.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.2",
    "shared": "workspace:*",
    "uuid": "13.0.0"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/passport-jwt": "4.0.1",
    "dependency-cruiser": "17.2.0",
    "jest": "29.7.0",
    "ts-jest": "29.1.2",
    "ts-node-dev": "2.0.0",
    "tsc-alias": "1.8.16",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.3"
  }
}
