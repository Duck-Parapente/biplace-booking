datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Event {
    id          String   @id
    aggregateId String
    name        String
    payload     Json
    metadata    Json?
    createdAt   DateTime @default(now()) @db.Timestamptz(3)
}

model FeatureFlag {
    id        String   @id
    key       String   @unique
    isActive  Boolean
    createdAt DateTime @default(now()) @db.Timestamptz(3)
    updatedAt DateTime @updatedAt @db.Timestamptz(3)
}

model User {
    id                String            @id
    email             String            @unique
    externalAuthId    String            @unique
    firstName         String?
    lastName          String?
    phoneNumber       String?
    address           String?
    currentScore      Int
    createdAt         DateTime          @db.Timestamptz(3)
    ownedPacks        Pack[]
    reservationWishes ReservationWish[]
    reservations      Reservation[]
}

model Pack {
    id                String                      @id
    ownerId           String
    owner             User                        @relation(fields: [ownerId], references: [id])
    label             String
    flightsHours      Int
    flightsCount      Int
    createdAt         DateTime                    @db.Timestamptz(3)
    reservationWishes ReservationWishPackChoice[]
    reservations      Reservation[]
}

enum ReservationWishStatus {
    PENDING
    CONFIRMED
    REFUSED
    CANCELLED
}

enum ReservationStatus {
    CONFIRMED
    CANCELLED
}

model ReservationWish {
    id            String                      @id
    startingDate  DateTime                    @db.Timestamptz(3)
    endingDate    DateTime                    @db.Timestamptz(3)
    packChoices   ReservationWishPackChoice[]
    publicComment String?
    user          User                        @relation(fields: [userId], references: [id])
    userId        String
    createdAt     DateTime                    @db.Timestamptz(3)
    status        ReservationWishStatus
    reservation   Reservation?
}

model ReservationWishPackChoice {
    reservationWishId String
    packId            String
    order             Int
    reservationWish   ReservationWish @relation(fields: [reservationWishId], references: [id], onDelete: Cascade)
    pack              Pack            @relation(fields: [packId], references: [id])

    @@id([reservationWishId, packId])
}

model Reservation {
    id                String            @id
    status            ReservationStatus
    startingDate      DateTime          @db.Timestamptz(3)
    endingDate        DateTime          @db.Timestamptz(3)
    pack              Pack              @relation(fields: [packId], references: [id])
    packId            String
    user              User?             @relation(fields: [userId], references: [id])
    userId            String?
    publicComment     String?
    createdAt         DateTime          @db.Timestamptz(3)
    reservationWish   ReservationWish?  @relation(fields: [reservationWishId], references: [id])
    reservationWishId String?           @unique
}
