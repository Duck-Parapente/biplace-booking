datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Event {
    id          String   @id
    aggregateId String
    name        String
    payload     Json
    metadata    Json?
    createdAt   DateTime @default(now())
}

model FeatureFlag {
    id        String   @id
    key       String   @unique
    isActive  Boolean
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model User {
    id                String            @id
    email             String            @unique
    externalAuthId    String            @unique
    firstName         String?
    lastName          String?
    phoneNumber       String?
    address           String?
    currentScore      Int
    createdAt         DateTime
    ownedPacks        Pack[]
    reservationWishes ReservationWish[]
    reservations      Reservation[]
}

model Pack {
    id                String            @id
    ownerId           String?
    owner             User?             @relation(fields: [ownerId], references: [id])
    label             String
    flightsHours      Int
    flightsCount      Int
    createdAt         DateTime
    reservationWishes ReservationWish[]
    reservations      Reservation[]
}

enum ReservationWishStatus {
    PENDING
    CONFIRMED
    REFUSED
    CANCELLED
}

model ReservationWish {
    id            String                @id
    startingDate  DateTime
    endingDate    DateTime
    packChoices   Pack[]
    publicComment String?
    createdBy     User                  @relation(fields: [createdById], references: [id])
    createdById   String
    createdAt     DateTime
    status        ReservationWishStatus
    reservations  Reservation[]
}

model Reservation {
    id                String           @id
    startingDate      DateTime
    endingDate        DateTime
    pack              Pack             @relation(fields: [packId], references: [id])
    packId            String
    user              User             @relation(fields: [userId], references: [id])
    userId            String
    publicComment     String?
    createdAt         DateTime
    reservationWish   ReservationWish? @relation(fields: [reservationWishId], references: [id])
    reservationWishId String?
}
