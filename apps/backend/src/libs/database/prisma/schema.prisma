datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Event {
    id          String   @id
    aggregateId String
    name        String
    payload     Json
    metadata    Json?
    createdAt   DateTime @default(now())
}

model User {
    id                String            @id
    email             String            @unique
    externalAuthId    String            @unique
    firstName         String?
    lastName          String?
    phoneNumber       String?
    address           String?
    currentScore      Int
    createdAt         DateTime
    ownedPacks        Pack[]
    reservationWishes ReservationWish[]
}

model Pack {
    id                String            @id
    ownerId           String?
    owner             User?             @relation(fields: [ownerId], references: [id])
    label             String
    flightsHours      Int
    flightsCount      Int
    createdAt         DateTime
    reservationWishes ReservationWish[]
}

enum ReservationWishStatus {
    PENDING
    CONFIRMED
    CANCELLED
}

model ReservationWish {
    id            String                @id
    startingDate  DateTime
    endingDate    DateTime
    packChoices   Pack[]
    publicComment String?
    createdBy     User                  @relation(fields: [createdById], references: [id])
    createdById   String
    createdAt     DateTime
    status        ReservationWishStatus
}
