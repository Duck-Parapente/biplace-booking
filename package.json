{
  "name": "boilerplate-starter",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "dev:backend": "turbo start:dev --filter=backend",
    "dev:frontend": "turbo dev --filter=frontend",
    "start": "turbo start",
    "docker:up": "docker-compose -f infra/docker-compose.yml up --build"
  },
  "packageManager": "pnpm@8.0.0"
}