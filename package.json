{
  "name": "biplace-booking",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "8.46.2",
    "@typescript-eslint/parser": "8.46.2",
    "eslint": "9.0.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-unused-imports": "4.3.0",
    "eslint-plugin-vue": "10.5.1",
    "husky": "9.1.7",
    "lint-staged": "15.0.0",
    "prettier": "3.2.0",
    "turbo": "2.5.8",
    "vue-eslint-parser": "10.2.0",
    "@types/node": "20.19.0",
    "typescript": "5.9.3"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "pnpm dc:local up -d && turbo dev",
    "lint": "eslint apps",
    "lint:fix": "eslint apps --fix && prettier apps --write",
    "test": "turbo test",
    "dev:backend": "turbo dev --filter=backend",
    "dev:frontend": "turbo dev --filter=frontend",
    "start": "turbo start",
    "dc:local": "cd infra && docker compose --profile local",
    "deploy:staging": "./infra/scripts/deploy.sh staging",
    "deploy:prod": "./infra/scripts/deploy.sh prod",
    "dc:logs:staging": "cd infra && docker compose --profile staging logs -f",
    "dc:logs:prod": "cd infra && docker compose --profile prod logs -f",
    "dc:main-caddy": "cd infra && docker compose -f docker-compose.entrypoint.yml"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.10.0"
  }
}
