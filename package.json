{
  "name": "biplace-booking",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "turbo": "2.5.8"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "dev:backend": "turbo start:dev --filter=backend",
    "dev:frontend": "turbo dev --filter=frontend",
    "start": "turbo start",
    "docker:local": "cd infra && docker compose --profile local",
    "build:image:staging": "cd infra && ./scripts/build-push-image.sh staging",
    "build:image:prod": "cd infra && ./scripts/build-push-image.sh prod",
    "docker:logs:staging": "cd infra && docker compose --profile staging logs -f",
    "docker:logs:prod": "cd infra && docker compose --profile prod logs -f",
    "docker:monitor": "cd infra && ./scripts/monitor-resources.sh"
  },
  "packageManager": "pnpm@8.0.0"
}